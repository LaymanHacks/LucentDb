    .projectItem {
        -moz-border-radius: 2px;
        -moz-transition: all 0.3s ease;
        -ms-transition: all 0.3s ease;
        -o-transition: all 0.3s ease;
        -webkit-border-radius: 2px;
        -webkit-transition: all 0.3s ease;
        border: 1px solid #414141;
        border-radius: 2px;
        display: block;
        font-size: 14px;
        margin: 5px;
        position: relative;
        transition: all 0.3s ease;
    }

    .projectItem:hover {
        -moz-box-shadow: 0px 0px 9px 0px rgba(255, 255, 255, 0.49);
        -moz-transition: all 0.3s ease;
        -ms-transition: all 0.3s ease;
        -o-transition: all 0.3s ease;
        -webkit-box-shadow: 0px 0px 9px 0px rgba(255, 255, 255, 0.49);
        -webkit-transition: all 0.3s ease;
        border-color: #a5a5a5;
        box-shadow: 0px 0px 9px 0px rgba(255, 255, 255, 0.49);
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .projectItem a {
        color: #646464;
        text-decoration: none;
    }

    .projectItem:hover a { text-decoration: none; }

    .CodeMirror {
        border: 1px solid #eee;
        height: auto;
    }

    .CodeMirror-scroll {
        overflow-x: auto;
        overflow-y: hidden;
    }
</style>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div ng-controller="scriptIndexCtrl as vm">
    <div style="float: right" class="btn-group" dropdown>
        <button type="button" class="btn btn-primary">{{vm.pageSize}} Items per page</button>
        <button type="button" class="btn dropdown-toggle">
            <span class="caret"></span>
            <span class="sr-only">Split button!</span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li>
                <a href="#" ng-click="vm.pageSize=10;vm.pageChanged()">10</a>
            </li>
            <li>
                <a href="#" ng-click="vm.pageSize=20;vm.pageChanged()">20</a>
            </li>
            <li>
                <a href="#" ng-click="vm.pageSize=50;vm.pageChanged()">50</a>
            </li>
        </ul>
    </div>


    <div class="row">
        <div class="col-lg-12 " style="padding: 5px 0px 5px 0px;" ng-controller="scriptCtrl as scriptModel" ng-repeat="script in vm.pageableResults.results">
            <div ng-include src="'app/Script/Script.html'"></div>
        </div>
    </div>
    <pagination total-items="vm.pageableResults.totalCount" items-per-page="vm.pageSize" ng-model="vm.currentPage" ng-change="vm.pageChanged()" max-size="10" class="pagination-sm" boundary-links="true"></pagination>
</div>
@section Scripts {

    <script src="~/app/Script/index.js"></script>
    <script src="~/bundles/LucentDbServices"></script>
    <script src="~/app/Script/Script.js"></script>
    <script src="~/Scripts/codemirror-3.01/codemirror.js"></script>
    <script src="~/Scripts/codemirror-3.01/mode/sql.js"></script>
    <script src="~/Scripts/ui-codemirror.min.js"></script>
