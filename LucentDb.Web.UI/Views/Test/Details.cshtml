
@model LucentDb.Domain.Entities.Test

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/codemirror-3.01/codemirror.css" rel="stylesheet" />
<link href="~/Content/codemirror-3.0/theme/ambiance.css" rel="stylesheet" />
<style>
    .projectItem {
        -moz-border-radius: 2px;
        -moz-transition: all 0.3s ease;
        -ms-transition: all 0.3s ease;
        -o-transition: all 0.3s ease;
        -webkit-border-radius: 2px;
        -webkit-transition: all 0.3s ease;
        border: 1px solid #414141;
        border-radius: 2px;
        display: block;
        font-size: 14px;
        margin: 5px;
        position: relative;
        transition: all 0.3s ease;
    }

        .projectItem:hover {
            -moz-box-shadow: 0px 0px 9px 0px rgba(255, 255, 255, 0.49);
            -moz-transition: all 0.3s ease;
            -ms-transition: all 0.3s ease;
            -o-transition: all 0.3s ease;
            -webkit-box-shadow: 0px 0px 9px 0px rgba(255, 255, 255, 0.49);
            -webkit-transition: all 0.3s ease;
            border-color: #a5a5a5;
            box-shadow: 0px 0px 9px 0px rgba(255, 255, 255, 0.49);
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .projectItem a {
            color: #646464;
            text-decoration: none;
        }

        .projectItem:hover a {
            text-decoration: none;
        }

    .CodeMirror {
        border: 1px solid #eee;
        height: auto;
    }

    .CodeMirror-scroll {
        overflow-x: auto;
        overflow-y: hidden;
    }
</style>

<div class="row" ng-controller="testDetailsCtrl as vm">
    <div class="col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"> {{vm.title}} - {{vm.test.validationScripts.length}}</h3>
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Id)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ProjectId)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ProjectId)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.IsActive)
                    </dd>

                </dl>
                <div class="row">
                    <div class="col-lg-12" style="padding: 5px 10px 5px 0px;" ng-controller="validationScriptCtrl as validationScriptModel" ng-repeat="validationScript in vm.test.validationScripts">
                        <div ng-include src="'/app/ValidationScript/ValidationScript.html'"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

@section Scripts {
    <script src="~/bundles/LucentDbServices"></script>
    
    <script src="~/app/Script/Script.js"></script>
    <script src="~/app/Test/details.js"></script>



}
