@*
    @model LucentDb.Domain.Entities.Script_ExpectedResult


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Script_ExpectedResult</h4>
            <hr/>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})


            <div class="form-group">
                @Html.LabelFor(model => model.ScriptId, new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ScriptId, (SelectList) ViewBag.Scripts, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.ScriptId, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ExpectedResultId, new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ExpectedResultId, (SelectList) ViewBag.ExpectedResults, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.ExpectedResultId, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ResultIndex, new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ResultIndex, new {htmlAttributes = new {@class = "form-control k-textbox"}})

                    @Html.ValidationMessageFor(model => model.ResultIndex, "", new {@class = "text-danger"})
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default"/>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }